<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:foregroundGravity="bottom">
    <TextView android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="You have driver coming now"
        android:textColor="#FFFFFF"
        android:id="@+id/txtDriverComing"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="25dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="You have driver coming now"
        android:textColor="#FFFFFF"
        android:id="@+id/txtDriverComingPhone"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="25dp" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="You have driver coming now"
        android:textColor="#FFFFFF"
        android:id="@+id/txtDriverComingVNumber"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="25dp" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="You have driver coming now"
        android:textColor="#FFFFFF"
        android:id="@+id/txtDriverComingVmodel"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="25dp" />
    <Button android:layout_width="190dp"
        android:id="@+id/btnContactDriver"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Contact"
        android:textColor="#fff"
        android:textSize="13dp"
        android:background="#2683c2"/>
</LinearLayout>